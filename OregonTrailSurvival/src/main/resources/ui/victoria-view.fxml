<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.VictoriaController">

    <!-- Fondo -->
    <children>
        <ImageView fitWidth="1100" fitHeight="600" preserveRatio="false">
            <image>
                <!-- Ruta correcta dentro de /resources/images/pantalla/ -->
                <Image url="@../images/pantalla/victoria.png" />
            </image>
        </ImageView>

        <!-- Panel encima -->
        <VBox spacing="25" alignment="CENTER">
            <padding>
                <Insets top="100" left="20" right="20" bottom="20"/>
            </padding>

            <Label text="¡FELICIDADES, HAS LLEGADO A OREGÓN!"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;
                          -fx-effect: dropshadow(gaussian, black, 8, 0.6, 2, 2);" />

            <Button text="Volver al menú"
                    onAction="#volverAlMenu"
                    prefWidth="220"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>

    </children>
</StackPane>
