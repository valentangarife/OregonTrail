           fx:controller="ui.InventarioViewController"
           alignment="CENTER"
           style="-fx-background-color: rgba(0, 0, 0, 0.8);"
           stylesheets="@inventario-style.css">

    <VBox alignment="CENTER" spacing="20" maxWidth="600" maxHeight="500"
          style="-fx-background-color: #2c3e50; -fx-padding: 30; -fx-background-radius: 10;">

